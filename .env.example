# Public (browser) Supabase config
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Server (API routes) Supabase service role key
SUPABASE_SERVICE_ROLE_KEY=

# Protects POST /api/admin/kols (optional; if empty, endpoint is open)
ADMIN_API_KEY=

# Protects POST /api/webhooks/helius (optional; if empty, endpoint is open)
HELIUS_WEBHOOK_AUTH_TOKEN=

HELIUS_API_KEY=
HELIUS_WEBHOOK_ID=
HELIUS_WEBHOOK_API_BASE_URL=https://api.helius.xyz

# Optional override; if empty the app uses the default public Helius RPC
NEXT_PUBLIC_SOLANA_RPC_URL=

# --- Wagering (custodial escrow, P2P markets) ---
# 3 rotating escrow wallets for market rounds
# Addresses (public keys)
ESCROW_WALLET_1_ADDRESS=
ESCROW_WALLET_2_ADDRESS=
ESCROW_WALLET_3_ADDRESS=

# Secret keys (base64 encoded, 64 bytes each)
# SECURITY WARNING: In production, use HSM or multi-sig instead of raw keys
ESCROW_WALLET_1_SECRET_KEY=
ESCROW_WALLET_2_SECRET_KEY=
ESCROW_WALLET_3_SECRET_KEY=

# Alternative: comma-separated list of addresses (uses numbered SECRET_KEYs above)
# ESCROW_WALLET_ADDRESSES=addr1,addr2,addr3

# RPC fallback endpoints (comma-separated, used if primary fails)
SOLANA_RPC_FALLBACKS=https://api.mainnet-beta.solana.com,https://solana-api.projectserum.com

# House fee taken on payouts, in basis points (2.5% = 250 bps)
HOUSE_FEE_BPS=250

# Fee collection wallet (receives house fees from payouts)
FEE_WALLET_ADDRESS=

# Optional: protect admin/ops endpoints for market creation, matching, settlement jobs
WAGERING_ADMIN_KEY=
SETTLEMENT_JOB_AUTH_TOKEN=

# Market scope controls
# How many tracked KOLs to include in market generation/leaderboard surfaces (default target ~200)
MARKET_KOLS_LIMIT=200
